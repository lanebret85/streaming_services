<a href="/streaming_services">Streaming Services Index</a>

<h1>All Shows</h1><br/>

<% @shows.display_true.each do |show| %>
  <h3><%= show.name %> <%= link_to "Update #{show.name}", "/shows/#{show.id}/edit" %></h3>
  <p>Genre: <%= show.genre %></p>
  <p>Released: <%= show.released %></p>
  <p><%= show.seasons %> Seasons</p>
  <p><%= show.episodes %> Episodes</p>
  <p><%= show.episode_runtime %> Minute Episodes</p>
  <p>Streaming Service: <%= show.streaming_service_id %></p><br/>
  <%= button_to "Delete #{show.name}", "/shows/#{show.id}", method: :delete %><br/>
<% end %>