<h1>All Shows</h1>

<% @shows.each do |show| %>
  <h3><%= show.name %></h3><br/>
  <p>Genre: <%= show.genre %></p>
  <p>Released: <%= show.released %></p>
  <p><%= show.seasons %> Seasons</p>
  <p><%= show.episodes %> Episodes</p>
  <p><%= show.episode_runtime %> Minute Episodes</p>
  <p>Streaming Service: <%= show.streaming_service_id %></p><br/>
<% end %>