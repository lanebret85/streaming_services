<%= form_with url: "/shows/#{@show.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: "#{@show.name}" %><br/><br/>
  <%= form.label :genre %>
  <%= form.text_field :genre, value: "#{@show.genre}" %><br/><br/>
  <%= form.label :released %>
  <%= form.text_field :released, value: "#{@show.released}" %><br/><br/>
  <%= form.label :episodes %>
  <%= form.text_field :episodes, value: "#{@show.episodes}" %><br/><br/>
  <%= form.label :seasons %>
  <%= form.text_field :seasons, value: "#{@show.seasons}" %><br/><br/>
  <%= form.label :episode_runtime %>
  <%= form.text_field :episode_runtime, value: "#{@show.episode_runtime}" %><br/><br/>
  <%= form.submit "Update Show" %>
<% end %>